{
  "name": "mino",
  "version": "1.0.0",
  "description": "A reusable React component library for LeetCode-style code editor using Monaco Editor",
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "types": "./dist/index.d.ts"
    },
    "./style.css": "./dist/style.css"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE.md"
  ],
  "scripts": {
    "build": "vite build",
    "dev": "ladle serve",
    "lint": "biome lint src",
    "lint:fix": "biome lint --write src",
    "format": "biome format --write src",
    "check": "biome check src",
    "type-check": "tsc --noEmit",
    "prepublishOnly": "bun run build && bun run type-check && bun run lint",
    "publish:npm": "npm publish",
    "publish:beta": "npm publish --tag beta",
    "build-story": "ladle build",
    "preview-story": "ladle preview"
  },
  "keywords": [
    "react",
    "monaco-editor",
    "code-editor",
    "typescript",
    "leetcode",
    "education",
    "interview",
    "practice",
    "coding",
    "competitive-programming",
    "competitive-coding",
    "competitive-programming",
    "component-library",
    "tailwindcss",
    "storybook",
    "ladle"
  ],
  "author": "Mihir Kumar <mihirpandey.13@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/mikr13/mino.git"
  },
  "bugs": {
    "url": "https://github.com/mikr13/mino/issues"
  },
  "homepage": "https://mikr13.github.io/mino/",
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "peerDependencies": {
    "react": "^18.0.0",
    "react-dom": "^18.0.0"
  },
  "dependencies": {
    "@monaco-editor/react": "^4.7.0",
    "lucide-react": "^0.525.0",
    "monaco-editor": "^0.50.0",
    "prettier": "^3.6.2",
    "prettier-plugin-organize-imports": "^4.1.0"
  },
  "devDependencies": {
    "@biomejs/biome": "2.0.5",
    "@ladle/react": "^4.1.1",
    "@types/node": "^22.0.0",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.3.1",
    "autoprefixer": "^10.4.20",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.2",
    "postcss": "^8.4.41",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "tailwindcss": "^3.4.9",
    "typescript": "^5.5.4",
    "ultracite": "5.0.25",
    "vite": "^5.3.5",
    "vite-plugin-dts": "^4.0.3"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,jsonc,css,scss,md,mdx}": [
      "npx ultracite format",
      "npx ultracite format"
    ]
  }
}
